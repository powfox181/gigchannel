<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/entryFragment">

    <fragment
        android:id="@+id/entryFragment"
        android:name="kodojo.gigchannel.frags.EntryFragment"
        android:label="frag_entry"
        tools:layout="@layout/frag_entry" >
        <action
            android:id="@+id/action_entryFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_entryFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="kodojo.gigchannel.frags.PostFragment"
        android:label="frag_post"
        tools:layout="@layout/frag_post" />
    <fragment
        android:id="@+id/settingsFragment2"
        android:name="kodojo.gigchannel.frags.SettingsFragment"
        android:label="frag_settings"
        tools:layout="@layout/frag_settings" />
</navigation>